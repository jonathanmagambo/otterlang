{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "`",
      "close": "`",
      "notIn": [
        "string",
        "comment"
      ]
    }
  ],
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ],
    [
      "`",
      "`"
    ]
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "folding": {
    "markers": {
      "start": "^\\s*#\\s*region\\b",
      "end": "^\\s*#\\s*endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(def|class|if|elif|else|for|while|try|except|finally|with|match|case).*:\\s*$",
    "decreaseIndentPattern": "^\\s*(elif|else|except|finally)\\b.*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*#.*$",
      "action": {
        "indent": "none"
      }
    },
    {
      "beforeText": "^\\s*(def|class|if|elif|else|for|while|try|except|finally|with|match|case).*:\\s*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\}\\s*$",
      "afterText": "^\\s*$",
      "action": {
        "indent": "outdent"
      }
    }
  ]
}